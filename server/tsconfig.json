{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"],
      "@api/*": ["./api/*"],
      "@controller/*": ["./controller/*"],
      "@service/*": ["./service/*"],
      "@loader/*": ["./loader/*"],
      "@models/*": ["./models/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
